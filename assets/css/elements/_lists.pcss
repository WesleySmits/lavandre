dl,
dt,
dd,
ol,
ul,
li {
    margin-top: 0;
    margin-bottom: 0;
    border: 0;
    outline: 0;
    font-size: 100%;
    vertical-align: baseline;
    background: transparent;
}

.no-list {
    list-style-type: none;
    margin: 0;
    padding: 0;
}

.inline-list {
    display: flex;
    flex-flow: row wrap;
    align-items: center;
}
