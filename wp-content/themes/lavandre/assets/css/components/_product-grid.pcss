@import "../variables/variables.pcss";

.ww-products-grid {
    display: grid;
    grid-row-gap: 3vw;
    grid-column-gap: 3vw;
    grid-template-columns: repeat(1, 1fr);
    max-width: 95vw;
    list-style-type: none;
    margin: 0 auto;
    padding: 0;

    @media (--tablet) {
        grid-template-columns: repeat(2, 1fr);
    }

    @media (--tablet-landscape) {
        max-width: 62.5vw;
        grid-template-columns: repeat(3, 1fr);
        grid-row-gap: 1vw;
        grid-column-gap: 1vw;
    }
}

.ww-products__image {
    width: 100%;
    margin: 0;
    object-fit: cover;
    aspect-ratio: 853 / 1280;
}

.ww-products__title {
    display: flex;
    align-items: center;
    margin: .5rem auto 1rem;
    font-family: var(--font-family-accent);
    font-size: 1.125rem;
    font-size: clamp(12px, calc(1.125 * 16 / 19.2)vw, 16px);
    font-weight: 400 !important;

    svg {
        font-size: inherit;
        width: clamp(12px, calc(1 * 16 / 19.2)vw, 14px);
        height: clamp(12px, calc(1 * 16 / 19.2)vw, 14px);
        margin-left: .5rem;
    }
}
