.minus-amount,
.plus-amount {
    background: none;
    border: none;
    color: var(--color-text);
    font-size: 30px;
    line-height: 20px;
    padding: 0;
    outline: none;
    font-weight: 100;

    &:hover,
    &:focus {
        background: none;
        outline: none;
        color: var(--color-text);
        cursor: pointer;
    }
}
