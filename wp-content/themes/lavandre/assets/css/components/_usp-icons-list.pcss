.usp-icons {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.usp-icons__item {
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    flex: 1 1 auto;

    &:not(:first-child) {
        border-left: 1px solid var(--color-border-2);
    }

    svg {
        margin-bottom: 3px;
    }
}

.usp-icons__title {
    font-size: .8125rem;
    text-transform: initial;
    font-weight: 400 !important;
    line-height: 1.5rem;
}
