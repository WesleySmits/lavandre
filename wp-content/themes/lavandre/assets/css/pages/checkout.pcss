@import "../variables/variables.pcss";
@import "../components/_timeline.pcss";

html body.woocommerce-checkout {
    background: var(--color-bg-gray);

    .site-main {
        max-width: 100vw;
        width: 100%;
        margin: 0;
        padding: 0;

        @media (--tablet-landscape) {
            max-width: 94vw;
            margin: 0 auto;
        }
    }

    .woocommerce-error {
        display: none;
    }
}

/* Remove from view and delete this block */
.page-header,
.woocommerce-form-coupon-toggle,
.woocommerce-form-login-toggle,
.woocommerce-NoticeGroup-checkout {
    display: none !important;
}

form.woocommerce-checkout {
    color: var(--color-text);

    @media (--tablet) {
        display: flex;
        flex-flow: row wrap;
        flex-wrap: wrap !important;
        justify-content: space-between;
        margin-top: 3vw;
        margin-right: 3vw;
        margin-bottom: 3vw;
        margin-left: 3vw;
        align-items: flex-start;
    }

    @media (--tablet-landscape) {
        margin-left: auto;
        margin-right: auto;
    }
}

.checkout-column {
    padding: 1rem 2%;
    background: var(--white);
    border: 1px solid var(--color-border);
    overflow: hidden;
    font-size: 13px;
    margin: 1rem 0;

    @media (--tablet) {
        flex: 0 0 calc(94%/2);
    }

    @media (--tablet-landscape) {
        flex: 0 0 calc(94%/3);
        flex-wrap: nowrap;
        margin: 0 auto;
        padding: 2%;
    }
}

.checkout-column__title {
    margin: 0 0 1rem 0;
    font-size: 1rem;
    font-weight: 400;
    text-transform: uppercase;
    color: var(--color-text);
}

.ww-thank-you {
    padding-top: 2vw;

    h1 svg {
        width: 1rem;
        height: 1rem;

        path {
            stroke: var(--color-green);
        }
    }
}

.thank-you-column {
    @media (--tablet) {
        flex: 0 0 49%;
    }
}

.thank-you-section {
    padding: 1rem;
    background: var(--white);
    border: 1px solid var(--color-border);
    overflow: hidden;
    font-size: 13px;
    margin: 1rem 0;

    @media (--tablet-landscape) {
        margin: 0 auto 1rem;
        padding: 2vw;
    }

    &--has-footer {
        padding-bottom: 1rem;
    }

    &__header {
        padding-bottom: 1rem;

        &--has-mini-heading {
            padding-bottom: .5rem;
        }
    }

    &__footer {
        position: relative;
        left: -1rem;
        width: calc(100% + 2rem);
        padding: 1rem;
        background: var(--color-shadow);

        @media (--tablet-landscape) {
            width: calc(100% + 4vw);
            left: -2vw;
            padding: 1vw 2vw;
        }
    }

    h1 {
        margin: 0;
        text-transform: uppercase;
        font-size: 0.75rem;

        @media (--tablet-landscape) {
            font-size: 0.875rem;
        }
    }

    h3 {
        font-size: 0.75rem;
        margin: 0 0 10px;
        text-transform: initial;
    }

    address {
        font-style: normal;
        font-size: 0.75rem;
    }

    small {
        font-size: .75rem;

        &.mini-heading {
            display: inline-block;
            margin-top: .4rem;
        }
    }

    h1,
    h2,
    h3,
    strong {
        font-weight: 600 !important;
    }
}

