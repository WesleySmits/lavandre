@import "../variables/variables.pcss";
@import "../components/_usp-icons-list.pcss";

.products.columns-3 {
    list-style-type: none;
    padding: 0;
}

.products.columns-3 .attachment-woocommerce_thumbnail {
    margin-bottom: 1rem;
}

.woocommerce-loop-product__title {
    font-size: 1rem;
    padding: 0.5rem 0;
}


/* -------------- */

#main-banner {
    position: relative;

    picture,
    video {
        max-height: 100vh;
        object-fit: cover;
    }
}

.main-banner__see-more {
    position: absolute;
    right: 0;
    bottom: 3.75rem;
    left: 0;
    width: 1.5rem;
    margin: auto;

    animation: bounce 2s infinite both;

    svg {
        fill: white;
        stroke: white;
    }
}

.ww-products {
    display: grid;
    grid-row-gap: 40px;
    grid-template-columns: repeat(4, 1fr);
    grid-column-gap: 0;
    border: 1px solid var(--color-border);

    &--three-columns {
        grid-template-columns: repeat(3,1fr);
    }
}

.ww-products__item {
    width: 100%;
    margin: 0;
    padding: 20px;
    border-right: 1px solid var(--color-border);
}

.ww-products__link {
    display: block;
    position: relative;
}

.ww-products__image {
    width: 100%;
    max-width: 100%;
    margin-bottom: 1rem;
}

.ww-products__title {
    margin: auto;
    padding: .5rem 0;
    font-size: 1rem;
    font-weight: 400 !important;
    text-transform: uppercase;
    text-align: center;
}

.homepage-newsletter-form {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
}

input.newsletter-subscribe-home__input {
    flex: 1 1 70%;
    border-radius: 0;
    height: 3.5rem;

    @media (--tablet-landscape) {
        font-size: 14px;
        line-height: 1.5rem;
    }

    &::-webkit-input-placeholder {
        color: var(--old-burgundy);
    }

    &::-moz-placeholder {
        color: var(--old-burgundy);
    }
}

button.newsletter-subscribe-home__button {
    flex: 1 1 30%;
    height: 3.5rem;
    border-radius: 0;
    height: 3.5rem;
}

#seo-content {
    margin-top: 1.5rem;
    padding-top: 0;
    padding-bottom: 0;
}

.ww-block .seo-content {
    max-height: 86px;
    font-size: 0.8125rem;

    header {
        margin-bottom: 10px;
    }

    h1 {
        font-size: 1.375rem;
        margin: 0;
    }

    h2 {
        font-size: 1.125rem;
    }
}

.ww-block .seo-content-toggle {
    display: block;
    margin-top: 10px;
    font-size: .8125rem;
    color: var(--color-text);
    text-decoration: underline;
}
