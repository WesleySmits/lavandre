.product-detail__gallery {
    .woocommerce-product-gallery {
        display: flex;
        justify-content: space-between;

        .woocommerce-product-gallery__image {
            & > a {
                display: block;
                line-height: 0;
            }
        }

        .woocommerce-product-gallery__trigger {
            display: none;
        }

        .product-detail__gallery__images {
            order: 1;

            @media (--tablet) {
                order: 2;
                flex: 0 0 82%;
            }

            .woocommerce-product-gallery__wrapper,
            img {
                width: 100%;
            }
        }

        .product-detail__gallery__image-list {
            position: relative;
            margin: 0;
            padding: 0;
            list-style: none;
            order: 2;

            @media (--tablet) {
                display: flex;
                flex-flow: column nowrap;
                flex: 0 0 100%;
            }

            li {
                position: absolute;
                display: none;

                &.active {
                    position: static;
                    display: initial;
                }
            }
        }
    }
}

.product-detail__gallery-grid {
    flex: 1 1 auto;
    border: 1px solid var(--jet);

    @media (--tablet) {
        border-right: none;
    }

    .product-detail__gallery__image-list {
        display: grid;
        background: var(--jet);
        grid-gap: 1px;
        grid-template-columns: [column-1] 6fr [column-2] 4fr;
        grid-template-rows: [row1-start] auto [row2-end] auto;

        margin: 0;
        padding: 0;
        list-style-type: none;

        li {
            position: relative;
            grid-column: column-2;

            img {
                width: 100%;
                height: 100%;
                max-height: calc(100vh - var(--header-height));
                object-fit: cover;
                object-position: center center;
            }

            &:first-child {
                grid-column: column-1;
                grid-row: span 2;
            }
        }
    }
}

.product-detail__gallery__thumbnails {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-gap: 1rem;
    margin: 1rem 0 0;
    padding: 0;
    list-style: none;
    order: 2;

    @media (--tablet) {
        display: flex;
        flex-flow: column nowrap;
        order: 1;
        flex: 0 0 15%;
        margin: 0;
    }

    li {
        @media (--tablet) {
            flex: 0 0 auto;

            & + li {
                margin-top: 1.5rem;
            }
        }
    }

    img:not(.loading) {
        width: 100%;
        height: auto;
    }
}

.qty {
    text-align: center;
}

.quantity {
    margin-bottom: 0 !important;
}

#detailAddToCart .single_add_to_cart_button {
    position: relative;
}

.product-detail__variations {
    .form-row {
        display: flex;
        flex-flow: row wrap;
    }
}

.product-detail__variation__label {
    font-family: var(--font-family-accent);
    flex: 0 0 100%;
    margin-top: 1rem;
    margin-bottom: 1rem;
    text-transform: uppercase;
    font-size: 12px;
    font-weight: 700;
}

.product-detail__variation {
    display: flex;
    flex: 0 0 100%;
    margin-bottom: 1rem;

    @media(--tablet) {
        flex: 0 0 auto;
    }

    & + .product-detail__variation {
        margin-left: 1rem;
    }
}

.product-detail__single-variation {
    width: 100%;

    .woocommerce-variation-add-to-cart {
        display: flex;
        flex-flow: row nowrap;
        align-items: center;
        flex: 0 0 100%;
        width: 100%;
        gap: .5rem;
    }

    .reset_variations {
        display: none;
    }
}
