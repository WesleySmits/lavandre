@import "../variables/variables.pcss";
@import "../components/_quantity-selector.pcss";

.type-product {
    display: flex;
    flex-flow: column nowrap;
    scroll-snap-type: y mandatory;

    & > * {
        scroll-snap-align: start;
    }
}


.woocommerce-breadcrumb {
    padding: 3rem 0rem;
    text-transform: uppercase;
    font-size: .75rem;
    font-weight: 700;

    a {
        font-weight: 300;
    }
}

.product-detail__main-container {
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-between;
    align-items: flex-start;

    @media (--tablet) {
        flex-flow: row nowrap;
        justify-content: space-between;
        align-items: flex-start;
    }
}

.product-detail__gallery {
    display: flex;
    justify-content: space-between;
    flex-flow: column nowrap;
    overflow: hidden;
    margin-bottom: 2rem;

    @media (--tablet) {
        flex: 0 0 63%;
        max-width: 50%;
        flex-flow: row nowrap;
        margin-bottom: 0;
    }

    @media (--tablet-landscape) {
        flex: 0 0 63%;
        max-width: 63%;
    }

    .woocommerce-product-gallery__wrapper {
        margin: 0;
    }
}

.product-detail__content {
    flex: 0 0 715px;
    padding: 2.5rem 1.25rem;

    @media (--tablet) {
        max-width: 50%;
        border-left: 1px solid var(--jet);
    }

    @media (--tablet-landscape) {
        max-width: 40%;
    }

    @media (--large-desktop) {
        padding: 5rem 8rem;
    }
}

.product-detail__title {
    margin: 0 0 .75rem;
    font-size: 1.5rem;
    line-height: 1.5rem;
    font-weight: 300;
    text-transform: uppercase;
    color: var(--color-text);
    text-align: center;

    @media (--tablet) {
        font-size: 2.375rem;
        line-height: 1.6;
    }
}

.product-detail__amount {
    display: block;
    margin: 0 0 .75rem;
    text-align: center;
    font-size: .75rem;
}

.product-detail__price {
    margin: 0 0 .75rem;
    font-size: 1.2rem;
    line-height: 1.6;
    color: var(--color-text);
    text-align: center;
}

.product-detail__excerpt {
    padding: 0 5%;
    font-size: .875rem;
    text-align: center;
    color: var(--jet);
    font-weight: 300;
}

.product-detail-variation-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-flow: row nowrap;

    &--subscription {
        flex-direction: column;
        align-items: initial;
        width: 100%;
    }
}

form.cart {
    display: flex;
    flex-flow: column nowrap;
    margin: 2.5rem 0;
    padding: 1.25rem 0;

    border-top: 1px solid var(--color-border);
}

.product-detail__description-toggle {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-content: center;
    align-items: center;
    width: 100%;
    margin-bottom: 5px;
    padding: 0;
    border: none;
    outline: none;
    background: none;
    color: var(--color-text);
    text-align: left;
    font-size: 1rem;
    font-weight: 700;

    &:after {
        content: '';
        position: absolute;
        top: 0;
        right: 10px;
        bottom: 0;
        margin: auto;
        display: inline-block;
        vertical-align: top;
        width: .75rem;
        height: .75rem;
        border-style: solid;
        border-color: var(--color-text);
        border-width: 0.15em 0.15em 0 0;
        transform: rotate(135deg);
    }

    &.active:after {
        transform: rotate(-45deg);
    }
}

.woocommerce-product-attributes {
    border: 0;
    margin: 0 0 1rem;
    font-size: inherit;

    tr {
        display: flex;
        justify-content: flex-start;
    }

    th,
    td {
        width: auto;
        padding: 0;
        border: 0;
        font-size: inherit;
        font-style: normal;
        background: none !important;
    }

    th:after {
        content: ":";
        margin-right: .25rem;
    }
}

.product-detail__description-content {
    font-size: .8125rem;

    h2 {
        font-size: 1rem;
        line-height: 1.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        background: none;
    }
}


