.woocommerce-product-gallery {
    display: flex;
    justify-content: space-between;
}

.woocommerce-product-gallery__image {
    & > a {
        display: block;
        line-height: 0;
    }
}

.woocommerce-product-gallery__trigger {
    display: none;
}

.product-detail__gallery__images {
    order: 1;

    @media (--tablet) {
        order: 2;
        flex: 0 0 82%;
    }

    .woocommerce-product-gallery__wrapper,
    img {
        width: 100%;
    }
}

.product-detail__gallery__image-list {
    position: relative;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-gap: 1rem;
    margin: 1rem 0 0;
    padding: 0;
    list-style: none;
    order: 2;

    @media (--tablet) {
        display: flex;
        flex-flow: column nowrap;
        flex: 0 0 100%;
        margin: 0;
    }

    li {
        position: absolute;
        display: none;

        &.active {
            position: static;
            display: initial;
        }
    }
}

.product-detail__gallery__thumbnails {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-gap: 1rem;
    margin: 1rem 0 0;
    padding: 0;
    list-style: none;
    order: 2;

    @media (--tablet) {
        display: flex;
        flex-flow: column nowrap;
        order: 1;
        flex: 0 0 15%;
        margin: 0;
    }

    li {
        @media (--tablet) {
            flex: 0 0 auto;

            & + li {
                margin-top: 1.5rem;
            }
        }
    }

    img:not(.loading) {
        width: 100%;
        height: auto;
    }
}

.qty {
    text-align: center;
}

.quantity {
    margin-bottom: 0 !important;
}

#detailAddToCart .single_add_to_cart_button {
    position: relative;
}

.product-detail__variation {
    display: flex;
    flex: 0 0 100%;
    margin-bottom: 1.5rem;

    .form-row {
        &:not(:first-child) {
            margin-left: 1rem;
        }
    }
}

.product-detail__single-variation {
    width: 100%;

    .woocommerce-variation-add-to-cart {
        display: flex;
        flex-flow: row wrap;
        flex: 0 0 100%;
        width: 100%;
    }

    .reset_variations {
        display: none;
    }
}


