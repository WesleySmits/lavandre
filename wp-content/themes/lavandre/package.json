{
    "name": "lavandre",
    "version": "0.0.1",
    "description": "Website for LavandrÃ©",
    "husky": {
        "hooks": {
            "pre-commit": "yarn prod && yarn cypress && yarn test"
        }
    },
    "scripts": {
        "start": "npm-run-all --parallel dev:watch lint:watch",
        "dev": "./node_modules/.bin/encore dev",
        "dev:watch": "./node_modules/.bin/encore dev --watch",
        "prod": "./node_modules/.bin/encore production",
        "prod:watch": "yarn prod --watch",
        "lint": "esw ./webpack.config.* app --color",
        "lint:watch": "yarn lint --watch",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:watch": "yarn test --watch",
        "cypress": "npx cypress run",
        "cypress:open": "npx cypress open"
    },
    "browserslist": [
        "defaults"
    ],
    "author": "Wesley Smits",
    "license": "MIT",
    "devDependencies": {
        "@babel/cli": "^7.16.0",
        "@babel/core": "^7.16.5",
        "@babel/node": "^7.16.5",
        "@babel/preset-env": "^7.16.5",
        "@babel/register": "^7.16.5",
        "@symfony/webpack-encore": "^0.31.0",
        "@types/jest": "^27.0.3",
        "@typescript-eslint/eslint-plugin": "^5.7.0",
        "@typescript-eslint/parser": "^5.7.0",
        "babel-jest": "27.4.5",
        "babel-loader": "^8.2.3",
        "cssnano": "^4.1.10",
        "cypress": "9.1.1",
        "eslint": "8.5.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-watch": "^8.0.0",
        "jest": ">=27.4.5",
        "jest-fetch-mock": "^3.0.3",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.5",
        "postcss-at-rules-variables": "^0.1.7",
        "postcss-calc": "^7.0.1",
        "postcss-color-function": "^4.1.0",
        "postcss-comment": "^2.0.0",
        "postcss-custom-properties": "^9.0.2",
        "postcss-each": "^0.10.0",
        "postcss-import": "^11.1.0",
