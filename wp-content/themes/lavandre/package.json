{
    "name": "lavandre",
    "version": "0.0.1",
    "description": "Website for LavandrÃ©",
    "husky": {
        "hooks": {
            "pre-commit": "yarn prod && yarn cypress && yarn test"
        }
    },
    "scripts": {
        "start": "npm-run-all --parallel dev:watch lint:watch",
        "dev": "./node_modules/.bin/encore dev",
        "dev:watch": "./node_modules/.bin/encore dev --watch",
        "prod": "npm-run-all --parallel build lint",
        "prod:watch": "yarn prod --watch",
        "build": "./node_modules/.bin/encore production",
        "lint": "eslint ./assets/js/** --ext .ts --quiet",
        "lint:fix": "yarn lint --fix",
        "lint:watch": "npx esw \"**/*.{ts,tsx}\" --color --watch",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:watch": "yarn test --watch",
        "cypress": "npx cypress run",
        "cypress:open": "npx cypress open"
    },
    "browserslist": [
        "defaults"
    ],
    "author": "Wesley Smits",
    "license": "MIT",
    "devDependencies": {
        "@babel/cli": "^7.16.0",
        "@babel/core": "^7.16.5",
        "@babel/node": "^7.16.5",
        "@babel/preset-env": "^7.16.5",
        "@babel/register": "^7.16.5",
        "@symfony/webpack-encore": "^1.7.0",
        "@types/jest": "^27.0.3",
        "@typescript-eslint/eslint-plugin": "^5.7.0",
        "@typescript-eslint/parser": "^5.7.0",
        "babel-jest": "27.4.5",
        "babel-loader": "^8.2.3",
        "cssnano": "^5.0.13",
        "cssnano-preset-default": "^5.1.9",
        "cypress": "9.1.1",
        "eslint": "8.5.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-watch": "^8.0.0",
        "file-loader": "^6.2.0",
        "jest": ">=27.4.5",
        "jest-fetch-mock": "^3.0.3",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.5",
        "postcss-at-rules-variables": "^0.3.0",
        "postcss-calc": "^8.0.0",
        "postcss-color-function": "^4.1.0",
        "postcss-custom-properties": "^12.0.1",
        "postcss-each": "^1.1.0",
        "postcss-import": "^14.0.2",
        "postcss-loader": "^6.2.1",
        "postcss-nested": "^5.0.6",
        "postcss-preset-env": "^7.0.2",
        "postcss-scss": "^4.0.2",
        "postcss-simple-vars": "^6.0.3",
        "prettier": "^2.5.1",
        "prettier-plugin-css-order": "^1.0.0",
        "ts-jest": "^27.1.2",
        "ts-loader": "^9.2.6",
        "typescript": "^4.5.4",
        "url-loader": "^4.1.1"
    },
    "dependencies": {
        "@lavandre/button": "0.0.21",
        "@ungap/custom-elements": "^1.0.0",
        "dialog-polyfill": "^0.5.6"
    }
}
